<h2>New Question</h2>
<div class="form_container">
  <%= form_for @question do |f| %>
    <%= f.label 'Title' %><br>
    <%= f.text_field :title %><br>

    <%= f.label 'Contents (Be Specific!)' %><br>
    <%= f.text_area :body, size: "50x15" %><br>

    <%= f.submit class:"button" %>
  <% end %>
</div>

<%= stylesheet_link_tag "app/stylesheets/index.css.scss" %>